<%= form_for @twitterlink do |f| %>

<% if @twitter.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@twitter.errors.count, "error") %> prohibited
      this twitter link from being saved:</h2>
    <ul>
    <% @twitter.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

<p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :link %><br>
    <%= f.text_area :link %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
